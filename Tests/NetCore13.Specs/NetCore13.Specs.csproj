<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>netcoreapp1.1</TargetFramework>
    <AssemblyName>FluentAssertions.NetCore13.Specs</AssemblyName>
    <RootNamespace>FluentAssertions.NetCore13.Specs</RootNamespace>
    <DefineConstants>NETSTANDARD_13</DefineConstants>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="FakeItEasy" Version="3.4.2" />
    <PackageReference Include="Microsoft.NET.Test.Sdk" Version="15.3.0" />
    <PackageReference Include="System.ValueTuple" Version="4.4.0" />
    <PackageReference Include="xunit" Version="2.3.0-beta5-build3769" />
    <PackageReference Include="xunit.runner.visualstudio" Version="2.3.0-beta5-build3769" />
    <DotNetCliToolReference Include="dotnet-xunit" Version="2.3.0-beta5-build3769" />
  </ItemGroup>
  <ItemGroup>
    <Reference Include="FluentAssertions">
      <HintPath Condition=" '$(Configuration)' == 'Debug' ">..\..\Artifacts\Debug\netstandard1.3\FluentAssertions.dll</HintPath>
      <HintPath Condition=" '$(Configuration)' == 'Release' ">..\..\Artifacts\Release\netstandard1.3\FluentAssertions.dll</HintPath>
    </Reference>
  </ItemGroup>
  <Import Project="..\Shared.Specs\Shared.Specs.projitems" Label="Shared" />
</Project>